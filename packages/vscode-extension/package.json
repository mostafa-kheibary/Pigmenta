{
	"name": "@pigmenta/vscode-extension",
	"displayName": "pigmenta",
	"description": "pigmenta",
	"private": true,
	"version": "0.0.1",
	"publisher": "mostafa-kheibary",
	"engines": {
		"vscode": "^1.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"languages": [
		{
			"id": "pigmenta-config",
			"aliases": [
				"Pigmenta Config"
			],
			"extensions": [
				".js"
			],
			"filenames": [
				"pigmenta.config.js"
			]
		}
	],
	"colorProviders": [
		{
			"language": "pigmenta-config"
		}
	],
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run build && npm run lint",
		"lint": "eslint src"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.0.0",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.36.0",
		"typescript": "^5.9.3"
	}
}
